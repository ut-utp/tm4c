{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
            "label": "Build UTP TM4C",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "echo": true,
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "reveal": "silent",
                "revealProblems": "never",
                // "close": true,
            },
            "command": [ "cargo", "build", "--release", "-p", "utp-tm4c" ],
        }
    ]
}
